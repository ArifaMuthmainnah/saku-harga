generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      String
  createdAt DateTime @default(now())
}

enum Kategori {
  pokok
  sayur
  protein
  lainnya
}

model Harga {
  id        Int      @id @default(autoincrement())
  nama      String
  kategori  Kategori @default(pokok)
  harga     Int
  satuan    String
  wilayah   String
  updatedAt DateTime @updatedAt
}